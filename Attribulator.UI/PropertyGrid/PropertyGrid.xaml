    <Style TargetType="{x:Type local:EditFieldItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:EditFieldItem}">
                    <Border BorderThickness="0 0 0 1" BorderBrush="Gray" Padding="0 2 0 2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20px"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox x:Name="PART_Checkbox" Grid.Column="0" HorizontalAlignment="Right"/>
                            <TextBlock x:Name="PART_Name" Grid.Column="1" Margin="5,0,0,0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ui:TreeHeader}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ui:TreeHeader}">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="14" Height="14" x:Name="PART_ImageClosed" Source="/Resources/CloseFolder.png"/>
                        <Image Margin="-14,0,0,0" Width="14" Height="14" x:Name="PART_ImageOpened" Source="/Resources/OpenFolder.png" Visibility="Hidden"/>
                        <TextBlock Margin="5,0,0,0" x:Name="PART_TextBlock"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>