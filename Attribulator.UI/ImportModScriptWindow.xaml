<Window x:Class="Attribulator.UI.ImportModScriptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Attribulator.UI"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Import ModScript" Height="500" Width="635" WindowStartupLocation="CenterScreen">
    <Grid>

        <TextBlock x:Name="ModDescription" TextWrapping="Wrap" Background="#FFE6E6E6" Margin="10,10,222,10" />
        <Image x:Name="ModImage" Margin="424,12,3,272"/>
        <Button Margin="0,0,10,10" Content="Import" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Height="33" Width="85" Click="Button_Import_Click"/>

    </Grid>
</Window>
