<Window x:Class="AttribulatorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AttribulatorUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="MenuItem_Open_Click"></MenuItem>
                <MenuItem Header="Save" Click="MenuItem_Save_Click"></MenuItem>
                <Separator />
                <MenuItem Header="Exit" Click="MenuItem_Exit_Click"></MenuItem>
            </MenuItem>
        </Menu>
    </Grid>
</Window>